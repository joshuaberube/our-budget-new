{
  "extends": [
    "next/core-web-vitals", 
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "warn",
      {},
      { "usePrettierrc": true }
    ],
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": false}
    ],
    "no-unexpected-multiline": "error",
    "no-mixed-operators": "error"
  }
}
